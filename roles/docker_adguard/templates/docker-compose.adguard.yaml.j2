version: "3"
services:
  adguardhome:
    image: {{ adguard_image }}
    container_name: adguardhome
    ports:
      - 53:53/tcp
      - 53:53/udp
      - 784:784/udp
      - 853:853/tcp
      - 3002:3000/tcp
      - 83:80/tcp
    volumes:
      - {{ adguard_work_dir }}:/opt/adguardhome/work
      - {{ adguard_config_dir }}:/opt/adguardhome/conf
    restart: unless-stopped
 