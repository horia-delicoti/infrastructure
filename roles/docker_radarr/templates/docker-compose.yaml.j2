version: "{{ compose_version }}"

services:
  radarr:
    image: {{ radarr_image }}
    container_name: radarr
    environment:
      - PUID={{ puid }}
      - PGID={{ pgid }}
      - TZ={{ timezone }}
    volumes:
      - {{ radarr_config_dir }}:/config
      - {{ movies_dir }}:/movies
      - {{ animations_dir }}:/animations
    ports:
      - {{ radarr_port }}:7878
    restart: unless-stopped
